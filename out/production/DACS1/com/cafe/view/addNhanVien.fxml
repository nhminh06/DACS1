<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<VBox spacing="15" style="-fx-background-color: #f9f9f9; -fx-border-color: #00796B; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cafe.controller.addNhanVien">

    <Label style="-fx-font-weight: bold; -fx-font-size: 18; -fx-text-fill: #00796B;" text="👤 Thêm Nhân Viên Mới" />

    <GridPane hgap="10" vgap="10">
        <Label text="Họ và Tên:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-text-fill: #263238;" />
        <TextField fx:id="txtHoTen" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="300" promptText="Nhập họ và tên" />

        <Label text="Số điện thoại:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-weight: bold; -fx-text-fill: #263238;" />
        <TextField fx:id="txtSoDienThoai" GridPane.columnIndex="1" GridPane.rowIndex="1" prefWidth="300" promptText="Nhập số điện thoại" />

        <Label text="Địa chỉ:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold; -fx-text-fill: #263238;" />
        <TextField fx:id="txtDiaChi" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="300" promptText="Nhập địa chỉ" />

        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-font-weight: bold; -fx-text-fill: #263238;" />
        <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="300" promptText="Nhập email" />

        <Label text="Chức vụ:" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-weight: bold; -fx-text-fill: #263238;" />
        <ComboBox fx:id="comboChucVu" GridPane.columnIndex="1" GridPane.rowIndex="4" prefWidth="300" promptText="Chọn chức vụ">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Quản lý" />
                    <String fx:value="Thu ngân" />
                    <String fx:value="Pha chế" />
                    <String fx:value="Phục vụ" />
                    <String fx:value="Bảo vệ" />
                </FXCollections>
            </items>
        </ComboBox>

        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <ImageView fx:id="imgAnhNhanVien" fitHeight="100" fitWidth="100" preserveRatio="true" style="-fx-border-color: #B0BEC5; -fx-border-radius: 4;" />
        <Button fx:id="btnChonAnh" styleClass="promo-button" text="📷 Chọn ảnh nhân viên" />
    </HBox>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button fx:id="btnLuu" styleClass="promo-button" text="✅ Lưu" />
        <Button fx:id="btnHuy" styleClass="promo-button" text="❌ Hủy" />
    </HBox>

</VBox>
