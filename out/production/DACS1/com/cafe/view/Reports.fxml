<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cafe.controller.ReportsController">

    <!-- Header -->
    <top>
        <HBox fx:id="header" styleClass="header">
            <Label styleClass="title" text="☕ Cafe Management System" />
        </HBox>
    </top>

    <!-- Sidebar -->
    <left>
        <VBox fx:id="sidebar" spacing="15" styleClass="sidebar">
            <Button onAction="#gotoorder" styleClass="sidebar-button" text="🍽 Orders" />
            <Button onAction="#gotoManagement" styleClass="sidebar-button" text="🏠 Management" />
            <Button onAction="#gotocustomers" styleClass="sidebar-button" text="👥 Customers" />
            <Button styleClass="sidebar-button" text="📊 Reports" />
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <HBox spacing="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- TableView Section (bên trái) -->
            <VBox spacing="15" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-weight: bold; -fx-font-size: 18; -fx-text-fill: #00796B;" text="📊 Báo cáo Doanh thu" />

                <!-- Toolbar -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Button fx:id="filterByDate" styleClass="promo-button" text="📅 Lọc theo ngày" />
                    <Button fx:id="filterByMonth" styleClass="promo-button" text="📆 Lọc theo tháng" />
                    <Button fx:id="exportReport" styleClass="promo-button" text="📤 Xuất báo cáo" />
                    <Region HBox.hgrow="ALWAYS" />
                    <TextField fx:id="searchReport" prefWidth="170" promptText="🔍 Tìm báo cáo..." styleClass="promo-text-field" />
                </HBox>

                <!-- Table -->
                <TableView fx:id="reportTable" prefHeight="250" style="-fx-background-color: #f9f9f9; -fx-border-color: #90a4ae; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="dateColumn" prefWidth="100" text="Ngày" />
                        <TableColumn fx:id="orderCountColumn" prefWidth="120" text="Số đơn hàng" />
                        <TableColumn fx:id="totalRevenueColumn" prefWidth="150" text="Doanh thu (VND)" />
                        <TableColumn fx:id="averageOrderValueColumn" prefWidth="260" text="Trung bình/đơn" />
                    </columns>
                </TableView>

                <!-- Line Chart -->
                <LineChart fx:id="revenueChart" prefHeight="200" title="Xu hướng Doanh thu">
                    <xAxis>
                        <CategoryAxis fx:id="xAxis" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis fx:id="yAxis" label="Doanh thu (VND)" />
                    </yAxis>
                </LineChart>
            </VBox>

            <!-- Chi tiết báo cáo (bên phải) -->
            <VBox prefWidth="350" spacing="10" style="-fx-background-color: #f4f4f4; -fx-padding: 20; -fx-border-color: #00796B; -fx-border-radius: 8; -fx-background-radius: 8;">
                <Label style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #00796B;" text="📈 Chi tiết Báo cáo" />

                <Label text="Ngày:" />
                <TextField fx:id="txtDate" editable="false" />

                <Label text="Số đơn hàng:" />
                <TextField fx:id="txtOrderCount" editable="false" />

                <Label text="Doanh thu:" />
                <TextField fx:id="txtTotalRevenue" editable="false" />

                <Label text="Trung bình mỗi đơn:" />
                <TextField fx:id="txtAverageOrderValue" editable="false" />

                <!-- Lịch sử đơn hàng -->
                <Label style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #00796B;" text="📜 Lịch sử đơn hàng" />
                <ListView fx:id="orderHistoryList" prefHeight="100" VBox.vgrow="ALWAYS" />
            </VBox>
        </HBox>
    </center>
</BorderPane>
