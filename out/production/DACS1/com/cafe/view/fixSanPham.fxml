<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" style="-fx-background-color: #f9f9f9; -fx-border-color: #00796B; -fx-border-radius: 8; -fx-background-radius: 8; -fx-padding: 20;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cafe.controller.fixSanPham">

    <Label style="-fx-font-weight: bold; -fx-font-size: 18; -fx-text-fill: #00796B;" text="✏Sửa thông tin sản phẩm" />

    <GridPane hgap="10" vgap="10">
        <Label style="-fx-font-weight: bold; -fx-text-fill: #263238;" text="Tên sản phẩm:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="tenSanPhamSua" prefWidth="300" promptText="Nhập tên sản phẩm" styleClass="promo-text-field" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label style="-fx-font-weight: bold; -fx-text-fill: #263238;" text="Giá:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="giaSanPhamSua" prefWidth="300" promptText="Nhập giá (VNĐ)" styleClass="promo-text-field" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label style="-fx-font-weight: bold; -fx-text-fill: #263238;" text="Mô tả:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextArea fx:id="moTaSanPhamSua" prefHeight="80" prefWidth="300" promptText="Nhập mô tả sản phẩm" styleClass="promo-text-area" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <columnConstraints>
         <ColumnConstraints />
         <ColumnConstraints />
      </columnConstraints>
      <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints />
      </rowConstraints>
    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button styleClass="promo-button" text="✅ Lưu thay đổi" />
        <Button styleClass="promo-button" text="❌ Hủy" />
    </HBox>

    <Label fx:id="thongTinSanPhamSua" style="-fx-font-style: italic; -fx-text-fill: #757575;" />

</VBox>
