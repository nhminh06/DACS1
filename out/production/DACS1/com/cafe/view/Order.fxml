<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cafe.controller.OrderController">

    <top>
        <HBox fx:id="header" styleClass="header">
            <Label styleClass="title" text="☕ Cafe Management System" />
            <Region HBox.hgrow="ALWAYS" />
        </HBox>
    </top>

    <left>
        <HBox alignment="TOP_LEFT" spacing="20">
            <VBox fx:id="sidebar" spacing="15" styleClass="sidebar">
                <Button styleClass="sidebar-button" text="🍽 Orders" />
                <Button onAction="#gotoManagement" styleClass="sidebar-button" text="🏠 Management" />
                <Button onAction="#gotocustomers" styleClass="sidebar-button" text="👥 Customers" />
                <Button onAction="#gotoreports" styleClass="sidebar-button" text="📊 Reports" />
                <Region VBox.vgrow="ALWAYS" />
            </VBox>

            <VBox fx:id="cotBan" spacing="10" styleClass="cot-ban">
                <Label alignment="CENTER" styleClass="ban-label" text="Table Status">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <ScrollPane fitToWidth="true">
                    <content>
                        <VBox alignment="TOP_CENTER" spacing="8">
                            <VBox alignment="CENTER" spacing="6" styleClass="o-ban">
                                <Label styleClass="ban-label" text="Table 1" />
                                <Label styleClass="trang-thai" text="Available" />
                            </VBox>
                            <VBox alignment="CENTER" spacing="6" styleClass="o-ban">
                                <Label styleClass="ban-label" text="Table 2" />
                                <Label styleClass="trang-thai-occupied" text="Occupied" />
                            </VBox>
                            <VBox alignment="CENTER" spacing="6" styleClass="o-ban">
                                <Label styleClass="ban-label" text="Table 3" />
                                <Label styleClass="trang-thai-reserved" text="Reserved" />
                            </VBox>
                            <VBox alignment="CENTER" spacing="6" styleClass="o-ban">
                                <Label styleClass="ban-label" text="Table 4" />
                                <Label styleClass="trang-thai" text="Available" />
                            </VBox>
                            <VBox alignment="CENTER" spacing="6" styleClass="o-ban">
                                <Label styleClass="ban-label" text="Table 5" />
                                <Label styleClass="trang-thai-occupied" text="Occupied" />
                            </VBox>
                            <VBox alignment="CENTER" spacing="6" styleClass="o-ban">
                                <Label styleClass="ban-label" text="Table 6" />
                                <Label styleClass="trang-thai" text="Available" />
                            </VBox>
                            <VBox alignment="CENTER" spacing="6" styleClass="o-ban">
                                <Label styleClass="ban-label" text="Table 7" />
                                <Label styleClass="trang-thai-occupied" text="Occupied" />
                            </VBox>
                            <VBox alignment="CENTER" spacing="6" styleClass="o-ban">
                                <Label styleClass="ban-label" text="Table 8" />
                                <Label styleClass="trang-thai-reserved" text="Reserved" />
                            </VBox>
                            <VBox alignment="CENTER" spacing="6" styleClass="o-ban">
                                <Label styleClass="ban-label" text="Table 9" />
                                <Label styleClass="trang-thai" text="Available" />
                            </VBox>
                            <VBox alignment="CENTER" spacing="6" styleClass="o-ban">
                                <Label styleClass="ban-label" text="Table 10" />
                                <Label styleClass="trang-thai-occupied" text="Occupied" />
                            </VBox>
                        </VBox>
                    </content>
                </ScrollPane>
            </VBox>
        </HBox>
    </left>

    <center>
        <HBox spacing="20">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <!-- Product display -->
            <StackPane fx:id="productDisplay" styleClass="content-area">
                <VBox spacing="10">
                    <Label alignment="CENTER" styleClass="ban-label" text="Menu">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
                        <content>
                            <GridPane alignment="TOP_LEFT" hgap="15" vgap="15">
                                <padding>
                                    <Insets bottom="10" left="10" right="10" top="10" />
                                </padding>

                                <VBox id="cafe_sua" alignment="CENTER" spacing="8" styleClass="product-box" GridPane.columnIndex="0" GridPane.rowIndex="0">
                                    <Pane styleClass="product-image-placeholder" />
                                    <Label styleClass="product-name" text="Cà Phê Sữa" />
                                    <Label styleClass="product-price" text="25,000 VNĐ" />
                                    <Button styleClass="add-button" text="Thêm" />
                                </VBox>

                                <VBox id="tra-sua" alignment="CENTER" spacing="8" styleClass="product-box" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                    <Pane styleClass="product-image-placeholder" />
                                    <Label styleClass="product-name" text="Trà Sữa" />
                                    <Label styleClass="product-price" text="30,000 VNĐ" />
                                    <Button styleClass="add-button" text="Thêm" />
                                </VBox>

                                <VBox id="nuoc-ep" alignment="CENTER" spacing="8" styleClass="product-box" GridPane.columnIndex="2" GridPane.rowIndex="0">
                                    <Pane styleClass="product-image-placeholder" />
                                    <Label styleClass="product-name" text="Nước Ép" />
                                    <Label styleClass="product-price" text="35,000 VNĐ" />
                                    <Button styleClass="add-button" text="Thêm" />
                                </VBox>

                                <VBox id="sinh-to" alignment="CENTER" spacing="8" styleClass="product-box" GridPane.columnIndex="0" GridPane.rowIndex="1">
                                    <Pane styleClass="product-image-placeholder" />
                                    <Label styleClass="product-name" text="Sinh Tố" />
                                    <Label styleClass="product-price" text="40,000 VNĐ" />
                                    <Button styleClass="add-button" text="Thêm" />
                                </VBox>

                                <VBox id="soda chanh" alignment="CENTER" spacing="8" styleClass="product-box" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <Pane styleClass="product-image-placeholder" />
                                    <Label styleClass="product-name" text="Soda Chanh" />
                                    <Label styleClass="product-price" text="20,000 VNĐ" />
                                    <Button styleClass="add-button" text="Thêm" />
                                </VBox>

                                <VBox id="cafe-den" alignment="CENTER" spacing="8" styleClass="product-box" GridPane.columnIndex="2" GridPane.rowIndex="1">
                                    <Pane styleClass="product-image-placeholder" />
                                    <Label styleClass="product-name" text="Cà Phê Đen" />
                                    <Label styleClass="product-price" text="22,000 VNĐ" />
                                    <Button styleClass="add-button" text="Thêm" />
                                </VBox>

                                <VBox id="tra-dao" alignment="CENTER" spacing="8" styleClass="product-box" GridPane.columnIndex="0" GridPane.rowIndex="2">
                                    <Pane styleClass="product-image-placeholder" />
                                    <Label styleClass="product-name" text="Trà Đào" />
                                    <Label styleClass="product-price" text="28,000 VNĐ" />
                                    <Button styleClass="add-button" text="Thêm" />
                                </VBox>

                                <VBox id="nuoc-cam" alignment="CENTER" spacing="8" styleClass="product-box" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                    <Pane styleClass="product-image-placeholder" />
                                    <Label styleClass="product-name" text="Nước Cam" />
                                    <Label styleClass="product-price" text="32,000 VNĐ" />
                                    <Button styleClass="add-button" text="Thêm" />
                                </VBox>

                                <VBox id="tra-xanh" alignment="CENTER" spacing="8" styleClass="product-box" GridPane.columnIndex="2" GridPane.rowIndex="2">
                                    <Pane styleClass="product-image-placeholder" />
                                    <Label styleClass="product-name" text="Trà Xanh" />
                                    <Label styleClass="product-price" text="27,000 VNĐ" />
                                    <Button styleClass="add-button" text="Thêm" />
                                </VBox>

                                <VBox id="matcha" alignment="CENTER" spacing="8" styleClass="product-box" GridPane.columnIndex="0" GridPane.rowIndex="3">
                                    <Pane styleClass="product-image-placeholder" />
                                    <Label styleClass="product-name" text="Matcha Latte" />
                                    <Label styleClass="product-price" text="25,000 VNĐ" />
                                    <Button styleClass="add-button" text="Thêm" />
                                </VBox>

                                <VBox id="nuoc-dua" alignment="CENTER" spacing="8" styleClass="product-box" GridPane.columnIndex="1" GridPane.rowIndex="3">
                                    <Pane styleClass="product-image-placeholder" />
                                    <Label styleClass="product-name" text="Nước Dừa" />
                                    <Label styleClass="product-price" text="30,000 VNĐ" />
                                    <Button styleClass="add-button" text="Thêm" />
                                </VBox>

                                <VBox id="cafe-phin" alignment="CENTER" spacing="8" styleClass="product-box" GridPane.columnIndex="2" GridPane.rowIndex="3">
                                    <Pane styleClass="product-image-placeholder" />
                                    <Label styleClass="product-name" text="Cà Phê Phin" />
                                    <Label styleClass="product-price" text="28,000 VNĐ" />
                                    <Button styleClass="add-button" text="Thêm" />
                                </VBox>

                                <VBox id="tra-sen" alignment="CENTER" spacing="8" styleClass="product-box" GridPane.columnIndex="0" GridPane.rowIndex="4">
                                    <Pane styleClass="product-image-placeholder" />
                                    <Label styleClass="product-name" text="Trà Sen" />
                                    <Label styleClass="product-price" text="29,000 VNĐ" />
                                    <Button styleClass="add-button" text="Thêm" />
                                </VBox>

                                <VBox id="nuoc-chanh" alignment="CENTER" spacing="8" styleClass="product-box" GridPane.columnIndex="1" GridPane.rowIndex="4">
                                    <Pane styleClass="product-image-placeholder" />
                                    <Label styleClass="product-name" text="Nước Chanh" />
                                    <Label styleClass="product-price" text="18,000 VNĐ" />
                                    <Button styleClass="add-button" text="Thêm" />
                                </VBox>

                                <VBox id="sua-chua" alignment="CENTER" spacing="8" styleClass="product-box" GridPane.columnIndex="2" GridPane.rowIndex="4">
                                    <Pane styleClass="product-image-placeholder" />
                                    <Label styleClass="product-name" text="Sữa Chua" />
                                    <Label styleClass="product-price" text="26,000 VNĐ" />
                                    <Button styleClass="add-button" text="Thêm" />
                                </VBox>

                                <VBox id="cafe-latte" alignment="CENTER" spacing="8" styleClass="product-box" GridPane.columnIndex="0" GridPane.rowIndex="5">
                                    <Pane styleClass="product-image-placeholder" />
                                    <Label styleClass="product-name" text="Cà Phê Latte" />
                                    <Label styleClass="product-price" text="35,000 VNĐ" />
                                    <Button styleClass="add-button" text="Thêm" />
                                </VBox>
                        <columnConstraints>
                           <ColumnConstraints />
                           <ColumnConstraints />
                           <ColumnConstraints />
                        </columnConstraints>
                        <rowConstraints>
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                           <RowConstraints />
                        </rowConstraints>
                            </GridPane>
                        </content>
                    </ScrollPane>
                </VBox>
            </StackPane>

            <!-- Invoice Display -->
            <StackPane fx:id="invoiceDisplay" styleClass="content-area">
                <VBox spacing="15">
                    <Label alignment="CENTER" styleClass="ban-label" text="Invoice">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                    <Separator />

                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label minWidth="150" styleClass="summary-label" text="Tên món" />
                        <Region HBox.hgrow="ALWAYS" />
                        <Label minWidth="30" styleClass="summary-label" text="SL" />
                        <Label minWidth="80" styleClass="summary-label" text="Giá" />
                    </HBox>

                    <VBox fx:id="invoiceItems" spacing="10" VBox.vgrow="ALWAYS">
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label minWidth="150" styleClass="product-name" text="Cà Phê Sữa" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Label minWidth="30" styleClass="summary-value" text="x1" />
                            <Label minWidth="80" styleClass="summary-value" text="25,000 VNĐ" />
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Label minWidth="150" styleClass="product-name" text="Trà Sữa" />
                            <Region HBox.hgrow="ALWAYS" />
                            <Label minWidth="30" styleClass="summary-value" text="x2" />
                            <Label minWidth="80" styleClass="summary-value" text="60,000 VNĐ" />
                        </HBox>
                    </VBox>

                    <Separator />

                    <HBox alignment="CENTER_RIGHT" spacing="10">
                        <Label styleClass="summary-label" text="Tổng cộng:" />
                        <Label fx:id="totalAmount" styleClass="summary-value" text="85,000 VNĐ" />
                    </HBox>

                    <VBox alignment="BOTTOM_RIGHT">
                        <Button styleClass="promo-button" text="Thanh Toán" />
                    </VBox>
                </VBox>
            </StackPane>
        </HBox>
    </center>

</BorderPane>
