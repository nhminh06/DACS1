<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:controller="com.cafe.controller.Chat"
      xmlns="http://javafx.com/javafx/11"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10" alignment="CENTER"
      prefWidth="400" prefHeight="500"
      stylesheets="@style.css" styleClass="vbox">

    <TextArea fx:id="chatArea" editable="false" wrapText="true" prefHeight="400" prefWidth="380"/>

    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="skchat" promptText="Nhập tin nhắn..." prefWidth="280"/>
        <Button fx:id="sendButton" text="Gửi"/>
    </HBox>

</VBox>
