<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.SplitPane?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cafe.controller.OrderController">

    <top>
        <HBox fx:id="header" styleClass="header">
            <Label text="☕ Cafe Management System" styleClass="title"/>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <left>
        <HBox spacing="20" alignment="TOP_LEFT">
            <VBox fx:id="sidebar" spacing="15" styleClass="sidebar">
                <Button text="🍽️ Orders" styleClass="sidebar-button" />
                <Button text="🏠 Management" styleClass="sidebar-button" onAction="#gotoManagement"/>
                <Button text="👥 Customers" styleClass="sidebar-button" onAction="#gotocustomers"/>
                <Button text="📊 Reports" styleClass="sidebar-button" onAction="#gotoreports"/>
                <Region VBox.vgrow="ALWAYS"/>
            </VBox>

            <VBox fx:id="cotBan" spacing="10" styleClass="cot-ban">
                <Label text="Table Status" styleClass="ban-label" alignment="CENTER">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Label>
                <ScrollPane fitToWidth="true">
                    <VBox spacing="8" alignment="TOP_CENTER">
                        <VBox alignment="CENTER" spacing="6" styleClass="o-ban">
                            <Label text="Table 1" styleClass="ban-label"/>
                            <Label text="Available" styleClass="trang-thai"/>
                        </VBox>
                        <VBox alignment="CENTER" spacing="6" styleClass="o-ban">
                            <Label text="Table 2" styleClass="ban-label"/>
                            <Label text="Occupied" styleClass="trang-thai-occupied"/>
                        </VBox>
                        <VBox alignment="CENTER" spacing="6" styleClass="o-ban">
                            <Label text="Table 3" styleClass="ban-label"/>
                            <Label text="Reserved" styleClass="trang-thai-reserved"/>
                        </VBox>
                        <VBox alignment="CENTER" spacing="6" styleClass="o-ban">
                            <Label text="Table 4" styleClass="ban-label"/>
                            <Label text="Available" styleClass="trang-thai"/>
                        </VBox>
                        <VBox alignment="CENTER" spacing="6" styleClass="o-ban">
                            <Label text="Table 5" styleClass="ban-label"/>
                            <Label text="Occupied" styleClass="trang-thai-occupied"/>
                        </VBox>
                        <VBox alignment="CENTER" spacing="6" styleClass="o-ban">
                            <Label text="Table 6" styleClass="ban-label"/>
                            <Label text="Available" styleClass="trang-thai"/>
                        </VBox>
                        <VBox alignment="CENTER" spacing="6" styleClass="o-ban">
                            <Label text="Table 7" styleClass="ban-label"/>
                            <Label text="Occupied" styleClass="trang-thai-occupied"/>
                        </VBox>
                        <VBox alignment="CENTER" spacing="6" styleClass="o-ban">
                            <Label text="Table 8" styleClass="ban-label"/>
                            <Label text="Reserved" styleClass="trang-thai-reserved"/>
                        </VBox>
                        <VBox alignment="CENTER" spacing="6" styleClass="o-ban">
                            <Label text="Table 9" styleClass="ban-label"/>
                            <Label text="Available" styleClass="trang-thai"/>
                        </VBox>
                        <VBox alignment="CENTER" spacing="6" styleClass="o-ban">
                            <Label text="Table 10" styleClass="ban-label"/>
                            <Label text="Occupied" styleClass="trang-thai-occupied"/>
                        </VBox>
                    </VBox>
                </ScrollPane>
            </VBox>
        </HBox>
    </left>

    <center>
        <SplitPane dividerPositions="1.2">
            <items>
                <StackPane fx:id="productDisplay" styleClass="content-area">
                    <VBox spacing="10">
                        <Label text="Menu" styleClass="ban-label" alignment="CENTER">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
                            <GridPane hgap="15" vgap="15" alignment="TOP_LEFT">
                                <padding>
                                    <Insets top="10" right="10" bottom="10" left="10"/>
                                </padding>
                                <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="product-box" alignment="CENTER">
                                    <Pane styleClass="product-image-placeholder"/>
                                    <Label text="Cà Phê Sữa" styleClass="product-name"/>
                                    <Label text="25,000 VNĐ" styleClass="product-price"/>
                                </VBox>
                                <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="product-box" alignment="CENTER">
                                    <Pane styleClass="product-image-placeholder"/>
                                    <Label text="Trà Sữa" styleClass="product-name"/>
                                    <Label text="30,000 VNĐ" styleClass="product-price"/>
                                </VBox>
                                <VBox GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="product-box" alignment="CENTER">
                                    <Pane styleClass="product-image-placeholder"/>
                                    <Label text="Nước Ép" styleClass="product-name"/>
                                    <Label text="35,000 VNĐ" styleClass="product-price"/>
                                </VBox>
                                <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="product-box" alignment="CENTER">
                                    <Pane styleClass="product-image-placeholder"/>
                                    <Label text="Sinh Tố" styleClass="product-name"/>
                                    <Label text="40,000 VNĐ" styleClass="product-price"/>
                                </VBox>
                                <VBox GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="product-box" alignment="CENTER">
                                    <Pane styleClass="product-image-placeholder"/>
                                    <Label text="Soda Chanh" styleClass="product-name"/>
                                    <Label text="20,000 VNĐ" styleClass="product-price"/>
                                </VBox>
                                <VBox GridPane.columnIndex="2" GridPane.rowIndex="1" styleClass="product-box" alignment="CENTER">
                                    <Pane styleClass="product-image-placeholder"/>
                                    <Label text="Cà Phê Đen" styleClass="product-name"/>
                                    <Label text="22,000 VNĐ" styleClass="product-price"/>
                                </VBox>
                                <VBox GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="product-box" alignment="CENTER">
                                    <Pane styleClass="product-image-placeholder"/>
                                    <Label text="Trà Đào" styleClass="product-name"/>
                                    <Label text="28,000 VNĐ" styleClass="product-price"/>
                                </VBox>
                                <VBox GridPane.columnIndex="1" GridPane.rowIndex="2" styleClass="product-box" alignment="CENTER">
                                    <Pane styleClass="product-image-placeholder"/>
                                    <Label text="Nước Cam" styleClass="product-name"/>
                                    <Label text="32,000 VNĐ" styleClass="product-price"/>
                                </VBox>
                                <VBox GridPane.columnIndex="2" GridPane.rowIndex="2" styleClass="product-box" alignment="CENTER">
                                    <Pane styleClass="product-image-placeholder"/>
                                    <Label text="Trà Xanh" styleClass="product-name"/>
                                    <Label text="27,000 VNĐ" styleClass="product-price"/>
                                </VBox>
                                <VBox GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="product-box" alignment="CENTER">
                                    <Pane styleClass="product-image-placeholder"/>
                                    <Label text="Sữa Tươi" styleClass="product-name"/>
                                    <Label text="25,000 VNĐ" styleClass="product-price"/>
                                </VBox>
                                <VBox GridPane.columnIndex="1" GridPane.rowIndex="3" styleClass="product-box" alignment="CENTER">
                                    <Pane styleClass="product-image-placeholder"/>
                                    <Label text="Nước Dừa" styleClass="product-name"/>
                                    <Label text="30,000 VNĐ" styleClass="product-price"/>
                                </VBox>
                                <VBox GridPane.columnIndex="2" GridPane.rowIndex="3" styleClass="product-box" alignment="CENTER">
                                    <Pane styleClass="product-image-placeholder"/>
                                    <Label text="Cà Phê Phin" styleClass="product-name"/>
                                    <Label text="28,000 VNĐ" styleClass="product-price"/>
                                </VBox>
                                <VBox GridPane.columnIndex="0" GridPane.rowIndex="4" styleClass="product-box" alignment="CENTER">
                                    <Pane styleClass="product-image-placeholder"/>
                                    <Label text="Trà Sen" styleClass="product-name"/>
                                    <Label text="29,000 VNĐ" styleClass="product-price"/>
                                </VBox>
                                <VBox GridPane.columnIndex="1" GridPane.rowIndex="4" styleClass="product-box" alignment="CENTER">
                                    <Pane styleClass="product-image-placeholder"/>
                                    <Label text="Nước Chanh" styleClass="product-name"/>
                                    <Label text="18,000 VNĐ" styleClass="product-price"/>
                                </VBox>
                                <VBox GridPane.columnIndex="2" GridPane.rowIndex="4" styleClass="product-box" alignment="CENTER">
                                    <Pane styleClass="product-image-placeholder"/>
                                    <Label text="Sữa Chua" styleClass="product-name"/>
                                    <Label text="26,000 VNĐ" styleClass="product-price"/>
                                </VBox>
                                <VBox GridPane.columnIndex="0" GridPane.rowIndex="5" styleClass="product-box" alignment="CENTER">
                                    <Pane styleClass="product-image-placeholder"/>
                                    <Label text="Cà Phê Latte" styleClass="product-name"/>
                                    <Label text="35,000 VNĐ" styleClass="product-price"/>
                                </VBox>
                            </GridPane>
                        </ScrollPane>
                    </VBox>
                </StackPane>

                <StackPane fx:id="invoiceDisplay" styleClass="content-area">
                    <VBox spacing="15">
                        <Label text="Invoice" styleClass="ban-label" alignment="CENTER">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <Separator/>

                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Label text="Tên món" styleClass="summary-label" minWidth="150"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Label text="SL" styleClass="summary-label" minWidth="30"/>
                            <Label text="Giá" styleClass="summary-label" minWidth="80"/>
                        </HBox>

                        <VBox fx:id="invoiceItems" spacing="10" VBox.vgrow="ALWAYS">
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="Cà Phê Sữa" styleClass="product-name" minWidth="150"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Label text="x1" styleClass="summary-value" minWidth="30"/>
                                <Label text="25,000 VNĐ" styleClass="summary-value" minWidth="80"/>
                            </HBox>
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label text="Trà Sữa" styleClass="product-name" minWidth="150"/>
                                <Region HBox.hgrow="ALWAYS"/>
                                <Label text="x2" styleClass="summary-value" minWidth="30"/>
                                <Label text="60,000 VNĐ" styleClass="summary-value" minWidth="80"/>
                            </HBox>
                        </VBox>

                        <Separator/>

                        <HBox alignment="CENTER_RIGHT" spacing="10">
                            <Label text="Tổng cộng:" styleClass="summary-label"/>
                            <Label fx:id="totalAmount" text="85,000 VNĐ" styleClass="summary-value"/>
                        </HBox>

                        <VBox alignment="BOTTOM_RIGHT">
                            <Button text="Thanh Toán" styleClass="promo-button"/>
                        </VBox>
                    </VBox>
                </StackPane>
            </items>
        </SplitPane>
    </center>
</BorderPane>