<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.awt.TextField?>
<?import java.awt.Button?>
<?import sun.font.Decoration.Label?>
<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cafe.controller.CustomersController">

    <!-- Header -->
    <top>
        <HBox fx:id="header" styleClass="header">
            <Label styleClass="title" text="☕ Cafe Management System" />
        </HBox>
    </top>

    <!-- Sidebar -->
    <left>
        <VBox fx:id="sidebar" spacing="15" styleClass="sidebar">
            <Button onAction="#gotoorder" styleClass="sidebar-button" text="🍽 Orders" />
            <Button onAction="#gotoManagement" styleClass="sidebar-button" text="🏠 Management" />
            <Button styleClass="sidebar-button" text="👥 Customers" />
            <Button onAction="#gotoreports" styleClass="sidebar-button" text="📊 Reports" />
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <HBox spacing="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- TableView Section (bên trái) -->
            <VBox spacing="15" HBox.hgrow="ALWAYS">
                <Label style="-fx-font-weight: bold; -fx-font-size: 18; -fx-text-fill: #00796B;" text="👥 Danh sách Nhân viên" />

                <!-- Toolbar -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Button fx:id="themNhanVien" styleClass="promo-button" text="➕ Thêm" onAction="#gotoaddnhanvien"/>
                    <Button fx:id="suaNhanVien" styleClass="promo-button" text="✏Sửa" onAction="#gotofixnhanvien"/>
                    <Button styleClass="promo-button" text="❌ Xóa" fx:id="xoaNhanVien" onAction="#gotodeletenhanvien"/>
                    <Region HBox.hgrow="ALWAYS" />
                    <TextField fx:id="timNhanVien" prefWidth="200" promptText="🔍 Tìm nhân viên..." styleClass="promo-text-field" />
                </HBox>

                <!-- Table -->
                <TableView fx:id="bangNhanVien" prefHeight="400" style="-fx-background-color: #f9f9f9; -fx-border-color: #90a4ae; -fx-border-radius: 5;" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="cotMaNV" prefWidth="80" text="Mã NV" />
                        <TableColumn fx:id="cotTenNV" prefWidth="180" text="Họ và Tên" />
                        <TableColumn fx:id="cotChucVu" prefWidth="120" text="Chức vụ" />
                        <TableColumn fx:id="cotSdt" prefWidth="120" text="SĐT" />
                        <TableColumn fx:id="cotEmail" prefWidth="180" text="Email" />
                    </columns>
                </TableView>
            </VBox>

            <!-- Chi tiết nhân viên (bên phải) -->
            <VBox prefWidth="350" spacing="10" style="-fx-background-color: #f4f4f4; -fx-padding: 20; -fx-border-color: #00796B; -fx-border-radius: 8; -fx-background-radius: 8;">
                <Label style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #00796B;" text="📄 Thông tin chi tiết" />

                <Label text="Mã NV:" />
                <TextField fx:id="txtMaNV" editable="false" />

                <Label text="Họ và Tên:" />
                <TextField fx:id="txtTenNV" editable="false" />

                <Label text="Chức vụ:" />
                <TextField fx:id="txtChucVu" editable="false" />

                <Label text="Số điện thoại:" />
                <TextField fx:id="txtSdt" editable="false" />

                <Label text="Email:" />
                <TextField fx:id="txtEmail" editable="false" />
            </VBox>

        </HBox>
    </center>
</BorderPane>
